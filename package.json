{
  "name": "reader-frontend",
  "version": "0.0.1",
  "description": "Front End for Rebus Reader",
  "main": "index.js",
  "engines": {
    "node": "^8.0.0"
  },
  "style": "static/styles/app.css",
  "scripts": {
    "test": "tap --esm --cov 'tests/*.js'",
    "dev-server": "GOOGLE_APPLICATION_CREDENTIALS=google-keyfile.json DEBUG=vonnegut:* SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test NODE_ENV=development BASE=https://localhost:4430 DEPLOY_STAGE=development nodemon dev.js",
    "dev-css": "onchange 'styles/**/*.css' -- npm run build-css",
    "dev-components": "rollup -c -w",
    "dev-docs": "onchange 'styles/**/*.css' -- npm run css-docs",
    "fix-things-for-me": "onchange 'styles/**/*.css' 'app/**/*.js' 'server/**/*.js' -- prettier-standard '**/*.{js,md,css}'",
    "start": "node index.js",
    "build-css": "node build-css.js && echo 'css done'",
    "build-components": "rollup -c",
    "build": "node build-css.js && rollup -c && npm run build-vendor",
    "build-vendor": "rollup -c rollup.vendor.config.js && pika-web --clean --optimize --dest=js/vendor",
    "css-docs": "npm run build-css && rm -rf docs && cp -r static docs && kss --config kss-config.json && echo 'done'",
    "deploy-dev": "gcloud app deploy app-development.yaml",
    "deploy-staging": "gcloud app deploy app-staging.yaml",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RebusFoundation/reader-frontend.git"
  },
  "author": "Rebus Foundation",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/RebusFoundation/reader-frontend/issues"
  },
  "homepage": "https://github.com/RebusFoundation/reader-frontend#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.1",
    "basichtml": "^0.22.0",
    "bl": "2.1.2",
    "browserify": "^16.2.3",
    "browserify-istanbul": "3.0.1",
    "cappadonna": "^1.4.0",
    "cli-error-notifier": "^2.0.1",
    "cssnano": "^4.1.10",
    "documentation": "^8.1.2",
    "envify": "^4.1.0",
    "esmify": "2.0.0",
    "fetch-mock": "^7.3.0",
    "husky": "1.3.1",
    "keyv-file": "^0.1.7",
    "kss": "^3.0.0-beta.23",
    "lint-staged": "^7.2.2",
    "node-mocks-http": "^1.7.3",
    "nodemon": "1.18.7",
    "onchange": "^4.1.0",
    "postcss": "^7.0.2",
    "postcss-calc": "^6.0.1",
    "postcss-custom-properties": "^8.0.3",
    "postcss-easy-import": "^3.0.0",
    "postcss-reporter": "^6.0.0",
    "prettier-standard": "^8.0.1",
    "proxyquire": "^2.1.0",
    "rollup": "^1.2.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "sinon": "^7.2.3",
    "standard": "^11.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "tap": "^12.6.1",
    "timekeeper": "^2.1.2",
    "tinyify": "^2.5.0",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "@github/details-menu-element": "^0.9.0",
    "@google-cloud/datastore": "^2.0.0",
    "@google-cloud/storage": "2.3.0",
    "@pika/web": "^0.4.1",
    "@postlight/mercury-parser": "^2.1.0",
    "built-in-element": "^0.1.4",
    "compression": "^1.7.3",
    "connect-ensure-login": "^0.1.1",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "date-fns": "^1.29.0",
    "debug": "4.1.0",
    "document-register-element": "^1.13.1",
    "dom-seek": "^4.0.3",
    "dompurify": "^1.0.9",
    "dotenv": "6.1.0",
    "eventemitter3": "^3.1.0",
    "express": "^4.16.3",
    "express-basic-auth": "^1.1.5",
    "file-drop-element": "^0.2.0",
    "got": "^9.2.2",
    "helmet": "^3.13.0",
    "hobb-api": "github:RebusFoundation/reader-api",
    "intersection-observer": "^0.5.1",
    "jsdom": "^13.2.0",
    "jsonwebtoken": "^8.3.0",
    "jszip": "3.1.5",
    "jwt-decode": "^2.2.0",
    "keyv": "^3.1.0",
    "lighterhtml": "^0.9.0",
    "lodash": "4.17.11",
    "microformat-node": "^2.0.1",
    "micromodal": "^0.3.2",
    "morgan": "^1.9.1",
    "ms": "^2.1.1",
    "multer": "1.4.1",
    "neverland": "^1.2.4",
    "onpushstate": "^0.3.1",
    "passport": "^0.4.0",
    "passport-auth0": "^1.0.0",
    "path-to-regexp": "^3.0.0",
    "pg": "^7.9.0",
    "quick-lru": "^2.0.0",
    "quill": "^1.3.6",
    "sanitize-html": "^1.19.0",
    "short-uuid": "^3.0.0",
    "sqlite": "^3.0.3",
    "systemjs": "^3.0.0",
    "viperhtml": "^2.16.0",
    "wicked-elements": "0.3.1",
    "wrender": "^1.2.2",
    "xmlserializer": "^0.6.1"
  },
  "standard": {
    "ignore": [
      "node_modules/**",
      "flow-typed/**"
    ],
    "parser": "babel-eslint"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "app/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignore": [
            "consecutive-duplicates-with-different-values"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "linters": {
      "{components,notes,styles,server,tests,views}/**/*.{js,md,css}": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
